<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6ED"
    android:padding="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <!-- ðŸ”  Title -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#014D40"
                android:layout_marginTop="12dp"
                android:gravity="center" />

            <!-- ðŸ–¼ï¸ Sharper Cover Image -->
            <ImageView
                android:id="@+id/imageCover"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:contentDescription="Cover Image"
                android:background="@drawable/bg_image_rounded"
                android:src="@drawable/ic_book_placeholder" />

            <!-- ðŸŽµ Modern Playback Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp">

                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_button_round"
                    android:src="@drawable/ic_previous"
                    android:tint="#FFFFFF"
                    android:contentDescription="Previous" />

                <ImageButton
                    android:id="@+id/btnPlayPause"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_button_round"
                    android:src="@drawable/ic_play_circle"
                    android:tint="#FFFFFF"
                    android:contentDescription="Play/Pause" />

                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_button_round"
                    android:src="@drawable/ic_next"
                    android:tint="#FFFFFF"
                    android:contentDescription="Next" />
            </LinearLayout>

            <!-- â¬‡ Download Icon -->
            <ImageButton
                android:id="@+id/btnDownload"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/stat_sys_download"
                android:backgroundTint="#4E342E"
                android:background="@drawable/bg_button_resume"
                android:tint="#FFFFFF"
                android:contentDescription="Download"
                android:layout_marginBottom="10dp"/>

            <!-- ðŸ“š Chapters -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewChapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none" />
        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>
